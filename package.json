{
  "name": "opfs-extended",
  "version": "0.1.0",
  "type": "module",
  "description": "A typed filesystem layer over OPFS for client-side agentic workflows",
  "author": "Bora Muyar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/boramuyar/opfs-extended.git"
  },
  "keywords": [
    "opfs",
    "filesystem",
    "browser",
    "agentic",
    "file-system",
    "streaming",
    "watch",
    "metadata"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc -b && vite build && tsc -p tsconfig.build.json",
    "build:playground": "vite build --config vite.playground.ts",
    "dev": "vite --config vite.playground.ts",
    "preview": "vite preview --config vite.playground.ts",
    "lint": "eslint .",
    "test": "vitest run",
    "test:unit": "vitest run --project unit",
    "test:browser": "vitest run --project browser",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "typecheck:playground": "tsc --noEmit -p tsconfig.playground.json"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.2.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-istanbul": "^3.2.4",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "happy-dom": "^18.0.1",
    "just-bash": "^2.10.2",
    "playwright": "^1.58.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwindcss": "^4.2.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vite-plugin-node-polyfills": "^0.25.0",
    "vitest": "^3.2.1"
  }
}
